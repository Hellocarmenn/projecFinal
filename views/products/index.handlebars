<!-- /views/products/index.handlebars -->
<h1>Listado de Productos</h1>

<ul>
  {{#each products}}
    <li>
      <a href="/products/{{this._id}}">{{this.name}}</a> - ${{this.price}}
      <form action="/carts/{{cartId}}/products/{{this._id}}" method="POST">
        <button type="submit">Agregar al carrito</button>
      </form>
    </li>
  {{/each}}
</ul>

<div>
  {{#if hasPrevPage}}
    <a href="{{prevLink}}">Página Anterior</a>
  {{/if}}
  Página {{page}} de {{totalPages}}
  {{#if hasNextPage}}
    <a href="{{nextLink}}">Página Siguiente</a>
  {{/if}}
</div>
